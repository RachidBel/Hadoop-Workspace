package day_7_Q1;

import java.io.IOException;
import java.util.TreeMap;

import org.apache.hadoop.io.Text;
import org.apache.hadoop.mapreduce.Reducer;

public class Q1_Reducer extends Reducer<CustomKey, Text, Text, Text> {

	private TreeMap<Integer,String> tm;
	public void reduce(CustomKey _key, Iterable<Text> values, Context context)
			throws IOException, InterruptedException {
		tm =new TreeMap<Integer,String>();
		// process values
		for (Text val : values) {
			String arr[] = val.toString().split(",");
			// arr[0] Stock volume
			// arr[1] Stock Name
			tm.put(Integer.parseInt(arr[0]),arr[1]);
			
			if(tm.size()>3)
				tm.remove(tm.firstKey());
			
			StringBuilder sb =new StringBuilder();
			for(int i:tm.keySet())
			{
				sb.append(tm.get(i));
				sb.append(",");
				sb.append(i);
				sb.append("\n");
			}
			
			context.write(_key.date, new Text(sb.toString()));
		}
		
	}

}
